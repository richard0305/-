<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_weather_bac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunnoon"
    tools:context=".WeatherActivity"
    tools:ignore="HardcodedText,DisableBaselineAlignment,ContentDescription,DuplicateIds" >

    <TextView
        android:id="@+id/tv_county"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="南京"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_Tomorrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="06-22"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_tomorrow_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Tomorrow"
                android:layout_centerHorizontal="true"
                android:text="晴"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/iv_tomorrow_day_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tomorrow_weather"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sun" />

            <TextView
                android:id="@+id/tv_tomorrow_day_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_tomorrow_day_weather"
                android:layout_centerHorizontal="true"
                android:text="23°"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_tomorrow_night_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tomorrow_day_temperature"
                android:layout_centerHorizontal="true"
                android:text="14°"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_tomorrow_night_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tomorrow_night_temperature"
                android:layout_centerHorizontal="true"
                android:src="@drawable/storm_weather" />

            <TextView
                android:id="@+id/tv_tomorrow_night_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_tomorrow_night_weather"
                android:layout_centerHorizontal="true"
                android:text="雷阵雨"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_tomorrom_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tomorrow_night_weather"
                android:layout_centerHorizontal="true"
                android:text="南风3-4级"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_Acquired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="06-23"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_acquired_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Acquired"
                android:layout_centerHorizontal="true"
                android:text="晴"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/iv_acquired_day_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_acquired_weather"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sun" />

            <TextView
                android:id="@+id/tv_acquired_day_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_acquired_day_weather"
                android:layout_centerHorizontal="true"
                android:text="23°"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_acquired_night_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_acquired_day_temperature"
                android:layout_centerHorizontal="true"
                android:text="14°"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_acquired_night_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_acquired_night_temperature"
                android:layout_centerHorizontal="true"
                android:src="@drawable/storm_weather" />

            <TextView
                android:id="@+id/tv_acquired_night_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_acquired_night_weather"
                android:layout_centerHorizontal="true"
                android:text="雷阵雨"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_acquired_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_acquired_night_weather"
                android:layout_centerHorizontal="true"
                android:text="南风3-4级"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_city_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@drawable/menu" />

    <ImageView
        android:id="@+id/iv_weather_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@drawable/share12" />

    <ImageView
        android:id="@+id/iv_today_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_today_weather"
        android:layout_toRightOf="@+id/tv_today_weather"
        android:padding="5dp"
        android:src="@drawable/sun" />

    <TextView
        android:id="@+id/tv_today_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_city_menu"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:text="晴"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_today_weather"
        android:layout_below="@+id/iv_today_weather"
        android:text="28°"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_today_weather"
        android:layout_toLeftOf="@+id/iv_weather_share"
        android:text="上次更新17:41"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_weather_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_temperature"
        android:layout_below="@+id/tv_temperature"
        android:text="风力"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_weather_wind"
        android:layout_toRightOf="@+id/tv_temperature"
        android:src="@drawable/wind1" />

    <TextView
        android:id="@+id/tv_today_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_update_time"
        android:layout_alignLeft="@+id/tv_update_time"
        android:text="2016-06-21"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</RelativeLayout>